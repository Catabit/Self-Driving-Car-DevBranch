#include <stdio.h>
#include <stdint.h>
#include <stdlib.h>
#include <poll.h>
#include <fcntl.h>
#include <errno.h>
#include <unistd.h>
#include <sys/mman.h>

int main(int argc, char *argv[]) {
	if (argc < 2) {
		printf("Usage ./%s /dev/videoX", argv[0]);
		return -1;
	}

	int fd;
	fd = open(argv[1], O_RDONLY);

	return 0;
}
