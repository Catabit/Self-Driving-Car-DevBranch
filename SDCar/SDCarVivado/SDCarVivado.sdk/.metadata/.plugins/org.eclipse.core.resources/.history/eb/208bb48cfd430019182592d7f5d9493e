#ifndef MOTION_IOCTL_H_
#define MOTION_IOCTL_H_

#include <linux/ioctl.h>

#define MOTION_IOC_MAGIC  '9'

#define MOTION_IOCENABLE    _IO(MOTION_IOC_MAGIC, 0)
#define MOTION_IOCDISABLE    _IO(MOTION_IOC_MAGIC, 1)

#define MOTION_IOCTSETDIR _IO(SCULL_IOC_MAGIC, 2)

#define MOTION_IOCQHEIGHT _IOR(MOTION_IOC_MAGIC,  3, int)
#define MOTION_IOCQWIDTH _IOR(MOTION_IOC_MAGIC,  4, int)
#define MOTION_IOCQPIXELLEN _IOR(MOTION_IOC_MAGIC,  5, int)
#define MOTION_IOCQBUFSIZE _IOR(MOTION_IOC_MAGIC,  6, int)

#define MOTION_IOC_MAXNR 6

#endif
