#ifndef CHARVIDEODEV_H_
#define CHARVIDEODEV_H_

#include "motion_ioctl.h"
#include "motiondriver.h"


static inline u32 reg_read(void __iomem * base_addr, u32 reg)
{
	return ioread32(base_addr + reg);
}

static inline void reg_write(void __iomem * base_addr, u32 reg, u32 value)
{
	iowrite32(value, base_addr + reg);
}


struct motors_dev {
	int dev_major;
	struct motiondriver_local *lp;
	struct cdev cdev;
	struct class *class;
	struct device *node;
};


/**
 * TODO: write() will be used to directly adjust the motor's speed via a uint32_t (reg[31-16] left motor, reg[15-0] right motor)
 * 		ioctl() will be used to enable/disable the motors and to change the direction, as it will not be used often
 */

ssize_t motors_write(struct file *filp, const char __user *buf, size_t count,
                loff_t *f_pos)
{
	struct motors_dev *dev = filp->private_data;
	void __iomem *base_addr = dev->lp->base_addr;

	ssize_t retval = -ENOMEM;
	uint32_t value=0;

	if (count>sizeof(uint32_t)) // can only write 4 bytes
		return -1;

	if (copy_from_user(&value, buf, count)) {
		retval = -EFAULT;
		goto out;
	}

	reg_write(base_addr, MOTOR_REG_OFFSET, value);

	*f_pos += count;
	retval = count;

	return retval;
}


long motors_ioctl(struct file *fp, unsigned int cmd, unsigned long arg) {
	struct motors_dev *dev = fp->private_data;
	int err = 0, tmp;
	int retval = 0;

	if (_IOC_TYPE(cmd) != MOTION_IOC_MAGIC)
		return -ENOTTY;
	if (_IOC_NR(cmd) > MOTION_IOC_MAXNR)
		return -ENOTTY;

	if (_IOC_DIR(cmd) & _IOC_READ)
	err = !access_ok(VERIFY_WRITE, (void __user *)arg, _IOC_SIZE(cmd));
	else if (_IOC_DIR(cmd) & _IOC_WRITE)
	err = !access_ok(VERIFY_READ, (void __user *)arg, _IOC_SIZE(cmd));
	if (err)
		return -EFAULT;

	switch (cmd) {

	case MOTION_IOCHALT:
		break;

	case MOTION_IOCSTART:
		break;

	case MOTION_IOCSTATUS:
		printk(KERN_NOTICE "Dumping the vdma's status:\n");
		break;

	/*case MOTION_IOCQHEIGHT:
		return v->height;
		*/

	default:
		return -ENOTTY;
	}

	return retval;

}

int motors_open(struct inode *in, struct file *fp)
{
	struct motors_dev *dev;
	//printk(KERN_NOTICE "Opened a file\n");

	dev = container_of(in->i_cdev, struct motors_dev, cdev);
	fp->private_data = dev;


	return 0;
}


struct file_operations charvideo_fops = {
	.owner =    THIS_MODULE,
	.unlocked_ioctl = motors_ioctl,
	.open =     motors_open,
	.write = motors_write,
};



void motors_delete(struct motors_dev *dev)
{
	dev_t devno = MKDEV(dev->dev_major, 0);

	device_destroy(dev->class, devno);
	class_destroy(dev->class);

	cdev_del(&dev->cdev);

	kfree(dev);

	unregister_chrdev_region(devno, 1);

	printk(KERN_NOTICE "Unregistered charvideo char device.\n");
}


static int motors_setup_cdev(struct motors_dev *dev)
{
	int err, devno = MKDEV(dev->dev_major, 0);
	struct device *node;


	cdev_init(&dev->cdev, &charvideo_fops);
	dev->cdev.owner = THIS_MODULE;
	dev->cdev.ops = &charvideo_fops;
	err = cdev_add (&dev->cdev, devno, 1);
	if (err){
		printk(KERN_WARNING "Error %d adding charvideo\n", err);
		return -1;
	}

	dev->class = class_create(THIS_MODULE, "video");
	if (!dev->class) {
		printk(KERN_WARNING "Can't create class");
		return -1;
	}

	printk(KERN_NOTICE "Created class.\n");


	node = device_create(dev->class, NULL, devno, NULL, "motors");
	if (!node) {
		printk(KERN_WARNING "Can't create device /dev/motors\n");
		class_destroy(dev->class);
		return -1;
	}


	return 0;
}


int motors_init(struct motors_dev *device, struct motiondriver_local *lp)
{
	int result;
	dev_t major = 0;

	result = alloc_chrdev_region(&major, 0, 1, "charvideo");

	device->dev_major = MAJOR(major);
	if (result < 0) {
		printk(KERN_WARNING "charvideo: can't get major %d\n", device->dev_major);
		motors_delete(device);
		return result;
	}

	device->lp = lp;


	result = motors_setup_cdev(device);
	if(result<0)
	{
		motors_delete(device);
		return result;
	}

	return 0;
}

struct motors_dev* motors_alloc(struct motiondriver_local *lp){
	struct motors_dev *local;

	local = kmalloc(sizeof(struct motors_dev), GFP_KERNEL);
	if (!local)
		return NULL;

	int result;
	result = motors_init(local, lp);
	if (result<0)
		return NULL;

	return local;
}

#endif
