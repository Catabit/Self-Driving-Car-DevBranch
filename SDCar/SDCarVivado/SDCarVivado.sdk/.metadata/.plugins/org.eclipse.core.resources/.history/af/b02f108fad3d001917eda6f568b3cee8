ARCH:=arm
CROSS_COMPILE:=arm-linux-gnueabihf-

CC=$(CROSS_COMPILE)gcc

obj-m += vdmadriver.o

KDIR := /home/catabit/Zybo/SDCar/build/tmp/work-shared/plnx_arm/kernel-source
PWD := $(shell pwd)


all:
	make default

default:
	${MAKE} -C ${KDIR} M=${PWD} modules CONFIG_STACK_VALIDATION=

clean:
	${MAKE} -C ${KDIR} M=${PWD} clean