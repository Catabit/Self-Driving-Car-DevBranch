#ifndef MOTION_IOCTL_H_
#define MOTION_IOCTL_H_

#include <linux/ioctl.h>

#define MOTION_IOC_MAGIC  '8'

#define MOTION_IOCHALT    _IO(CHARVIDEO_IOC_MAGIC, 0)
#define MOTION_IOCSTART    _IO(CHARVIDEO_IOC_MAGIC, 1)
#define MOTION_IOCSTATUS    _IO(CHARVIDEO_IOC_MAGIC, 2)

#define MOTION_IOCQHEIGHT _IOR(CHARVIDEO_IOC_MAGIC,  3, int)
#define MOTION_IOCQWIDTH _IOR(CHARVIDEO_IOC_MAGIC,  4, int)
#define MOTION_IOCQPIXELLEN _IOR(CHARVIDEO_IOC_MAGIC,  5, int)
#define MOTION_IOCQBUFSIZE _IOR(CHARVIDEO_IOC_MAGIC,  6, int)

#define MOTION_IOC_MAXNR 6

#endif
