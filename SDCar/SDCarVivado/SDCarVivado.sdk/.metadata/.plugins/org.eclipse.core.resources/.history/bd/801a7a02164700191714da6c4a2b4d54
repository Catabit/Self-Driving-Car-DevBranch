#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <fcntl.h>
#include <sys/mman.h>
#include <linux/ioctl.h>

#define MOTION_IOC_MAGIC  '9'

#define MOTION_IOCTSETENABLE    _IO(MOTION_IOC_MAGIC, 0)
#define MOTION_IOCTSETDIR	_IO(MOTION_IOC_MAGIC, 1)

#define MOTION_IOC_MAXNR 1


//#define SERVO_TEST


int main(void) {
	int motors, servo;

	motors = open("/dev/motors", O_RDONLY);
	if (motors < 1) {
		fprintf(stderr,"Can't open motors.\n");
		return -1;
	}

	servo = open("/dev/servo", O_RDONLY);
	if (servo < 1) {
		fprintf(stderr,"Can't open servo.\n");
		return -1;
	}

	// mmap the UIO device

	unsigned int enable = 0;
	unsigned int leftDir = 0;
	unsigned int rightDir = 0;

	unsigned short leftSpeed = 0;
	unsigned short rightSpeed = 0;

	unsigned int servoPos = 0;




	printf("Starting left motor testing\n");
	enable = 1;
	leftDir=0;
	//write control
	ioctl(motors, MOTION_IOCTSETENABLE, 1);
	ioctl(motors, MOTION_IOCTSETDIR, ((leftDir&1)<<1) +(rightDir&1));


	printf("Direction %d\n", leftDir);

	for (int i=0; i<=0xFFFF; i++) {
		leftSpeed = i;
		//write leftspeed
		usleep(100);
	}

	printf("Slowing down\n");

	for (int i=0xFFFF; i>=0; i--) {
			leftSpeed = i;
			//write leftspeed
			usleep(100);
	}

	leftDir=1;
	//write control

	printf("Direction %d\n", leftDir);

	for (int i=0; i<=0xFFFF; i++) {
			leftSpeed = i;
			//write leftspeed
			usleep(100);
	}

	printf("Slowing down\n");

	for (int i=0xFFFF; i>=0; i--) {
			leftSpeed = i;
			//write leftspeed
			usleep(100);
	}

	//stop motors
	leftDir = 0;

	printf("Starting right motor testing\n");

	rightDir=0;
	//write control

	printf("Direction %d\n", rightDir);

	for (int i=0; i<=0xFFFF; i++) {
		rightSpeed = i;
		//write rightspeed
		usleep(100);
	}

	printf("Slowing down\n");

	for (int i=0xFFFF; i>=0; i--) {
		rightSpeed = i;
		//write rightspeed
		usleep(100);
	}

	rightDir=1;
	//write control

	printf("Direction %d\n", rightDir);

	for (int i=0; i<=0xFFFF; i++) {
		rightSpeed = i;
		//write rightspeed
		usleep(100);
	}

	printf("Slowing down\n");

	for (int i=0xFFFF; i>=0; i--) {
		rightSpeed = i;
		//write rightspeed
		usleep(100);
	}

	//stop motors

#ifdef SERVO_TEST

	printf("Starting servo testing\n");

	printf("Centering servo\n");
	*((unsigned *)(ptr + SERVO_REG_OFFSET)) = 340;
	usleep(10000);

	for (int reps =0; reps<10; reps++){
		for (int i= 280; i<=400; i++) {
			servoPos = i;
			*((unsigned *)(ptr + SERVO_REG_OFFSET)) = servoPos;
			usleep(10000);
		}
		for (int i= 400; i>=280; i--) {
			servoPos = i;
			*((unsigned *)(ptr + SERVO_REG_OFFSET)) = servoPos;
			usleep(10000);
		}
	}

	printf("Centering servo\n");
	*((unsigned *)(ptr + SERVO_REG_OFFSET)) = 340;
	usleep(10000);

	*((unsigned *)(ptr + CONTROL_REG_OFFSET)) = 0;
	*((unsigned *)(ptr + MOTOR_REG_OFFSET)) = 0;

#endif

	close(motors);
	close(servo);
	return 0;
}





