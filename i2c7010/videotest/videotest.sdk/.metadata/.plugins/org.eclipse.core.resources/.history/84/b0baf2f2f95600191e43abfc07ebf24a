#include <stdio.h>
#include <unistd.h>
#include <string.h>
#include <stdint.h>
#include <fcntl.h>
#include <sys/mman.h>
#include <sys/ioctl.h>
#include <linux/i2c-dev.h>
#include <math.h>
#include <stdlib.h>


/* ------------------------------------------------------------ */
/*                  Definitions                                 */
/* ------------------------------------------------------------ */
#define PMON_NO_BITS           10
#define PMON_I2C_ADDR          0x2f  //TODO
#define PMON_CONV_OFFSET_G_LSB (15.6 * 0.001) // Convert offset (g) to LSB,
											 // 15.6 mg/LSB


/* ------------------------------------------------------------ */
/*                  Parameters Definitions                      */
/* ------------------------------------------------------------ */

#define CONVERT_VOLTAGE_CONTINUOUSLY 0
#define CONVERT_VOLTAGE_ONCE 1
#define CONVERT_CURRENT_CONTINUOUSLY 2
#define CONVERT_CURRENT_ONCE 3
#define VRANGE 4
#define STATUS_READ 6
#define NONE 0







// My WORKSPACE

int init() {

	int fd;
	if ((fd = open("/dev/i2c-1", O_RDWR)) < 0) {
		/* ERROR HANDLING: you can check errno to see what went wrong */
		printf("Failed to open the i2c bus\n");
		return -1;
	}
	printf("Opened the bus\n");

	if (ioctl(fd, I2C_SLAVE_FORCE, PMON_I2C_ADDR) < 0) {
		printf("Failed to acquire bus access and/or talk to slave.\n");
		/* ERROR HANDLING; you can check errno to see what went wrong */
		return -1;
	}

	printf("Opened device \n");
	return fd;
}


int readData(int fd, uint8_t *data, uint8_t length) {
	int result = read(fd, data, length);

	if (result != length) {
		printf("Failed to read %d bytes from the i2c bus. Read %d bytes instead.\n", length, result);
		return result;
	}
	else {
		return length;
	}
}

int writeData(int fd, uint8_t *data, uint8_t length) {
	int result = write(fd, data, length);

	if (result != length) {
		printf("Failed to write %d bytes on the i2c bus. Wrote %d bytes instead.\n", length, result);
		return result;
	}
	else {
		return length;
	}
}

float ConvertBytestoVoltage(uint8_t msb, uint8_t lsb) {
	float result = 0.0f;

	uint16_t voltageCode = ((uint16_t)msb << 4) | ((lsb >> 4) & 0x0F);
	float fullscale = 26.52;
	float range = 4096.0f;


	result =  (voltageCode / range) * fullscale;
	return result;
}

uint16_t reverse(uint16_t b) {
   b = (b & 0xF0) >> 4 | (b & 0x0F) << 4;
   b = (b & 0xCC) >> 2 | (b & 0x33) << 2;
   b = (b & 0xAA) >> 1 | (b & 0x55) << 1;
   return b;
}

float ConvertBytestoVoltageReverse(uint8_t msb, uint8_t lsb) {
	float result = 0.0f;

	msb = reverse(msb);
	lsb = reverse(lsb);

	uint16_t voltageCode = msb | ((uint16_t)lsb << 8);
	float fullscale = 26.52;
	float range = 4096.0f;


	result =  (voltageCode / range) * fullscale;
	return result;
}


float ConvertBytestoCurrent(uint8_t msb, uint8_t lsb) {
	float result = 0.0f;

	uint16_t currentCode = ((uint16_t)msb << 4) | (lsb & 0x0F);
	float fullscale = 0.10584;
	float range = 4096.0f;
	float resistance = 0.1;

	result =  ((currentCode / range)* fullscale) / resistance;
	return result;
}


void Pmon_VoltageCurrentRead(int fd, float *voltage, float *current) {
	uint8_t dataBytes[3];
	dataBytes[0] = 0;
	dataBytes[1] = 0;
	dataBytes[2] = 0;
	readData(fd, (uint8_t *)dataBytes, 3);
	printf("Bytes before converting: %d %d %d\n",dataBytes[0], dataBytes[1], dataBytes[2]);

	*voltage = ConvertBytestoVoltage(dataBytes[0], dataBytes[2]);
	*current = ConvertBytestoCurrent(dataBytes[1], dataBytes[2]);
}

void Pmon_VoltageRead(int fd, float *voltage) {
	uint8_t dataBytes[2];
	dataBytes[0] = 0;
	dataBytes[1] = 0;
	readData(fd, (uint8_t *)dataBytes, 2);
	printf("Bytes before converting: %d %d\n",dataBytes[0], dataBytes[1]);

	*voltage = ConvertBytestoVoltage(dataBytes[0], dataBytes[1]);
}

void Pmon_VoltageReadReverse(int fd, float *voltage) {
	uint8_t dataBytes[2];
	dataBytes[0] = 0;
	dataBytes[1] = 0;
	readData(fd, (uint8_t *)dataBytes, 2);
	printf("Bytes before converting: %d %d\n",dataBytes[0], dataBytes[1]);

	*voltage = ConvertBytestoVoltageReverse(dataBytes[0], dataBytes[1]);
}

void checIfAlive(int fd){
	uint8_t data = NONE;
	if( writeData(fd, &data, 0) == 0) {
		printf("Pmon is alive! \n");
	}
}


